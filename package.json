{
  "name": "unblocks",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "changeset": "changeset",
    "check-all": "turbo run build lint typecheck test",
    "clean": "turbo run clean",
    "dev": "turbo run dev",
    "dev:packages": "turbo run dev --filter={./packages/*}",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "auto-release": "turbo run build && changeset publish",
    "manual-release": "npm run check-all && changeset version && changeset publish",
    "prepare": "husky",
    "storybook": "concurrently -k -n storybook,packages \"turbo run storybook\" \"npm run dev:packages\"",
    "build-storybook": "turbo run build --filter=@unblocks/storybook"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.2",
    "@types/react-dom": "^19.1.6",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.29",
    "concurrently": "^9.2.0",
    "husky": "^9.1.7",
    "eslint": "^9.28.0",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "react-dom": "^19.1.0",
    "tsup": "^8.4.0",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "npm@10.9.2",
  "workspaces": [
    "apps/*",
    "configs/*",
    "packages/*"
  ]
}
