{
  "name": "unblocks",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "changeset": "changeset",
    "check-all": "turbo run build lint typecheck test",
    "clean": "turbo run clean",
    "dev": "turbo run dev",
    "dev:packages": "turbo run dev --filter={./packages/*}",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "auto-release": "turbo run build && changeset publish",
    "manual-release": "npm run check-all && changeset version && changeset publish",
    "prepare": "husky",
    "storybook": "concurrently -k -n storybook,packages \"turbo run storybook\" \"npm run dev:packages\"",
    "build-storybook": "turbo run build --filter=@unblocks/storybook"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/react-dom": "^19.2.3",
    "@testing-library/react": "^16.3.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.9",
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "eslint": "^9.39.2",
    "jest": "^30.2.0",
    "prettier": "^3.8.0",
    "react-dom": "^19.2.3",
    "tsup": "^8.5.1",
    "turbo": "^2.5.4",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "npm@10.9.2",
  "workspaces": [
    "apps/*",
    "configs/*",
    "packages/*"
  ]
}
